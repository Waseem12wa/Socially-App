<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ChatActivity">

    <!-- Header Bar -->
    <LinearLayout
        android:id="@+id/headerBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/chevron_left"
            android:tint="@color/brown_primary"
            android:layout_marginEnd="16dp" />

        <!-- Profile Picture -->
        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/brown_primary"
            app:cardElevation="2dp"
            android:layout_marginEnd="12dp"
            app:cardPreventCornerOverlap="false">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="IS"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="sans-serif" />

        </androidx.cardview.widget.CardView>

        <!-- Username -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="internshala"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif" />

        <!-- Video Call Icon -->
        <ImageView
            android:id="@+id/videoCallIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/camera"
            android:tint="@color/brown_primary"
            android:layout_marginEnd="16dp" />

        <!-- Info Icon -->
        <ImageView
            android:id="@+id/infoIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_dialog_info"
            android:tint="@color/brown_primary" />

    </LinearLayout>

    <!-- Chat Messages Area -->
    <ScrollView
        android:id="@+id/chatScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/headerBar"
        app:layout_constraintBottom_toTopOf="@id/messageInputBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Timestamp -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4:49 PM"
                android:textColor="#999999"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp" />

            <!-- Message Bubble -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="@color/brown_primary"
                    app:cardElevation="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hello"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"
                        android:padding="12dp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Message Input Bar -->
    <LinearLayout
        android:id="@+id/messageInputBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#F5F5F5"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:elevation="4dp"
        app:layout_constraintBottom_toTopOf="@id/homeIndicator">

        <!-- Camera Icon -->
        <ImageView
            android:id="@+id/cameraIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/camera"
            android:tint="@color/brown_primary"
            android:layout_marginEnd="12dp" />

        <!-- Message Input Field -->
        <EditText
            android:id="@+id/messageInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:drawable/edit_text"
            android:hint="Message..."
            android:textColorHint="#999999"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:padding="12dp"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLines="3"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <!-- Microphone Icon -->
        <ImageView
            android:id="@+id/microphoneIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_btn_speak_now"
            android:tint="@color/brown_primary"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <!-- Gallery Icon -->
        <ImageView
            android:id="@+id/galleryIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_edit"
            android:tint="@color/brown_primary"
            android:layout_marginEnd="8dp" />

        <!-- Emoji Icon -->
        <ImageView
            android:id="@+id/emojiIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_dialog_info"
            android:tint="@color/brown_primary" />

    </LinearLayout>

    <!-- Home Indicator -->
    <View
        android:id="@+id/homeIndicator"
        android:layout_width="134dp"
        android:layout_height="4dp"
        android:background="@color/brown_primary"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
